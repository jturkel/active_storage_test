<h1>New User</h1>

<%= form_with scope: :user, local: true, url: users_path do |form| %>
  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <%= form.file_field :avatar %>

  <div class="field">
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true %>
  </div>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>
